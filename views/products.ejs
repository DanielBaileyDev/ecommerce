<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Products</title>
  <link href="/imgs/favicon.ico" rel="icon"/>

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">

  <!-- Font Awesome -->
  <script src="/fontawesome/fontawesome.js"></script>
  <script src="/fontawesome/solid.js"></script>

  <link rel="stylesheet" href="/css/reset.css">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/productSection.css">
</head>

<body>
  <%- include('partials/header') -%>
  <section>
    <div class="products-nav">
      <div class="products-nav-item second-item"></div>
      <div class="products-nav-item second-item">
        <h2>Products</h2>
      </div>
      <div class="products-nav-item">
        <input type="text" id="search-input" onkeyup="searchProducts()" placeholder="Search Products">
      </div>
    </div>
    <div class="product-container">
      <% if(products.length> 0){ %>
      <% products.forEach(product=> { %>
      <div class="product">
        <img src="<%= product.img %>">
        <h4 class="product-name">
          <%= product.name %>
        </h4>
        <span>
          <%= product.price %>
        </span>
        <a href="products/<%= product._id %>" class="button">View</a>
      </div>
      <% }) %>
      <% }else{ %>
      <div class="no-product">
        <h4>No Products Available</h4>
      </div>
      <% } %>
    </div>
  </section>
  <%- include('partials/footer') -%>
  <script src="/js/search.js"></script>
  <script src="/js/main.js"></script>
</body>

</html>